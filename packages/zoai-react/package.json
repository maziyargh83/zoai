{
  "name": "@zoai/react",
  "publishConfig": {
    "access": "public"
  },
  "description": "A minimalistic string manipulation package for your applications",
  "version": "1.0.9",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "author": "Mazyar Gholami <mazyar.gh83@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maziyargh83/zoai.git",
    "directory": "packages/zoai"
  },
  "homepage": "https://github.com/maziyargh83/zoai/tree/main/packages/zoai",
  "bugs": {
    "url": "https://github.com/maziyargh83/zoai/issues"
  },
  "keywords": [
    "zoai",
    "internationalization",
    "i18n",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm gen:bundle && pnpm gen:types",
    "gen:bundle": "vite build",
    "gen:types": "tsup",
    "check": "tsc",
    "prebuild": "rm -rf dist",
    "prepublish": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^20",
    "rollup-plugin-node-externals": "^8.0.0",
    "tsup": "^8.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vinxi": "^0.5.4",
    "vite": "^6.3.2"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@zoai/core": "workspace:*"
  }
}
