{
  "name": "@zoai/core",
  "publishConfig": {
    "access": "public"
  },
  "description": "A multilingual package for your applications",
  "version": "3.0.0",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/main.d.ts"
    }
  },
  "type": "module",
  "author": "Mazyar Gholami <mazyar.gh83@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maziyargh83/zoai.git",
    "directory": "packages/zoai"
  },
  "homepage": "https://github.com/maziyargh83/zoai/tree/main/packages/zoai",
  "bugs": {
    "url": "https://github.com/maziyargh83/zoai/issues"
  },
  "keywords": [
    "zoai",
    "internationalization",
    "i18n",
    "typescript"
  ],
  "scripts": {
    "build": "rollup --config ./rollup.config.js",
    "test": "vitest",
    "publish-packages": "turbo run build test --filter=@zoai/core && changeset version && changeset publish"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.2",
    "rollup": "^4.28.1",
    "typescript": "~5.6.2",
    "vitest": "^2.1.8"
  }
}
